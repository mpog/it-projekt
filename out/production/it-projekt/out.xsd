<?xml version="1.0" encoding="UTF-8" ?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
	<xs:element name="report">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="project">
					<xs:complexType>
						<xs:sequence>							
							<xs:element name="result">
								<xs:complexType>
									<xs:sequence>
										<xs:element type="xs:int" name="subjunctives"/>
										<xs:element type="xs:float" name="zip"/>
										<xs:element type="xs:int" name="chars"/>
										<xs:element type="xs:int" name="words"/>
										<xs:element type="xs:int" name="allSentenceSeperators"/>
										<xs:element type="xs:int" name="innerSentenceSeperators"/>
										<xs:element type="xs:int" name="sentences"/>
										<xs:element type="xs:int" name="abbreviations"/>
									</xs:sequence>				  
								</xs:complexType>				
							</xs:element>							
							<xs:element name="tips">
							  <xs:complexType>
								<xs:sequence>
								  <xs:element type="xs:string" name="tip" maxOccurs="unbounded" minOccurs="0"/>
								</xs:sequence>
							  </xs:complexType>
							</xs:element>
						</xs:sequence>
					</xs:complexType>
				</xs:element>
				<xs:element name="line" maxOccurs="unbounded" minOccurs="0">
					<xs:complexType>
						<xs:sequence>
							<xs:element name="result">
								<xs:complexType>
									<xs:sequence>
										<xs:element name="key">
											<xs:complexType>
												<xs:sequence>
													<xs:element type="xs:int" name="subjunctives"/>
													<xs:element type="xs:int" name="chars"/>
													<xs:element type="xs:int" name="words"/>
													<xs:element type="xs:int" name="allSentenceSeperators"/>
													<xs:element type="xs:int" name="innerSentenceSeperators"/>
													<xs:element type="xs:int" name="sentences"/>
													<xs:element type="xs:int" name="abbreviations"/>
												</xs:sequence>
											</xs:complexType>
										</xs:element>
										<xs:element name="value">
											<xs:complexType>
												<xs:sequence>
													<xs:element type="xs:int" name="subjunctives"/>
													<xs:element type="xs:int" name="chars"/>
													<xs:element type="xs:int" name="words"/>
													<xs:element type="xs:int" name="allSentenceSeperators"/>
													<xs:element type="xs:int" name="innerSentenceSeperators"/>
													<xs:element type="xs:int" name="sentences"/>
													<xs:element type="xs:int" name="abbreviations"/>
												</xs:sequence>
											</xs:complexType>
										</xs:element>
									</xs:sequence>
								</xs:complexType>
							</xs:element>
						</xs:sequence>
						<xs:attribute type="xs:int" name="nr" use="required"/>
					</xs:complexType>
				</xs:element>
				<xs:element name="errors">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="error" maxOccurs="unbounded" minOccurs="0">
                <xs:complexType>
                  <xs:simpleContent>
                    <xs:extension base="xs:string">
                      <xs:attribute type="xs:byte" name="lineNr" use="optional"/>
                    </xs:extension>
                  </xs:simpleContent>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
</xs:schema>